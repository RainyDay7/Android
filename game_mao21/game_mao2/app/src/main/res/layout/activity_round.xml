<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b14"
    android:foregroundTint="#00D33C3C"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RoundActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:foregroundTint="#03A9F4"
        android:text="@string/text_round"
        android:fontFamily="@font/qingkebenyuesong"
        android:textColor="#CE392D"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:background="#e0000000"
                android:backgroundTint="#D5F1A3A3"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_q1"
                android:textColor="#ffffff"
                android:fontFamily="@font/qingkebenyuesong"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:background="#e0000000"
                android:backgroundTint="#D5F1A3A3"
                android:gravity="center"
                android:padding="5dp"
                android:text="关卡2"
                android:textColor="#ffffff"
                android:fontFamily="@font/qingkebenyuesong"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:background="#e0000000"
                android:backgroundTint="#D5F1A3A3"
                android:gravity="center"
                android:padding="5dp"
                android:text="关卡3"
                android:textColor="#ffffff"
                android:fontFamily="@font/qingkebenyuesong"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:background="#e0000000"
                android:backgroundTint="#D5F1A3A3"
                android:gravity="center"
                android:padding="5dp"
                android:text="关卡4"
                android:textColor="#ffffff"
                android:fontFamily="@font/qingkebenyuesong"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_q5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:background="#e0000000"
                android:backgroundTint="#D5F1A3A3"
                android:gravity="center"
                android:padding="5dp"
                android:text="关卡5"
                android:textColor="#ffffff"
                android:fontFamily="@font/qingkebenyuesong"
                android:textSize="24sp" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>